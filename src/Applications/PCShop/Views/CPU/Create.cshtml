@model PCShop.ViewModels.CPU.CreateInputModel

<form method="post">
    @PartialViews.ValidationPartial
    @PartialViews.CommonFormFieldsPartial

    <div class="form-group">
        <label for="frequency">Frequency (in GHz)</label>
        <input type="text" name="frequency" class="form-control" id="" placeholder="Enter frequency">
    </div>
    <div class="form-group">
        <label for="turboFrequency">Turbo frequency (in GHz)</label>
        <input type="text" name="turboFrequency" class="form-control" id="" placeholder="Enter turbo frequency">
    </div>
    <div class="form-group">
        <label for="physicalCores">Physical cores</label>
        <input type="number" name="physicalCores" class="form-control" id="" placeholder="Enter physical cores count">
    </div>
    <div class="form-group">
        <label for="logicalCores">Logical cores</label>
        <input type="number" name="logicalCores" class="form-control" id="" placeholder="Enter logical cores count">
    </div>
    <div class="form-group">
        <label for="cache">Cache</label>
        <input type="text" name="cache" class="form-control" id="" placeholder="Enter cache">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>