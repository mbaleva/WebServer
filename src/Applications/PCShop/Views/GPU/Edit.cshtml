<form method="post">
    @PartialViews.ValidationPartial
    <input type="hidden" value="@Model.Id" />
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" id="" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="imageUrl">Image</label>
        <input type="text" name="imageUrl" class="form-control" id="" value="@Model.ImageUrl">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" name="price" class="form-control" id="" value="@Model.Price">
    </div>
    <div class="form-group">
        <label for="graphicalProcessor">Graphical Processor (in GHz)</label>
        <input type="text" name="graphicalProcessor" class="form-control" id="" value="@Model.GraphicalProcessor">
    </div>
    <div class="form-group">
        <label for="capacity">Capacity (in GB)</label>
        <input type="number" name="capacity" class="form-control" id="" value="@Model.Capacity">
    </div>
    <div class="form-group">
        <label for="memoryType">Memory Type</label>
        <input type="text" name="memoryType" class="form-control" id="" value="@Model.MemoryType">
    </div>
    <div class="form-group">
        <label for="interfaces">Interfaces</label>
        <input type="text" name="interfaces" class="form-control" id="" value="@Model.Interfaces">
    </div>
    <div class="form-group">
        <label for="directXSupport">DirectX Support</label>
        <input type="text" name="directXSupport" class="form-control" id="" value="@Model.DirectXSupport">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>