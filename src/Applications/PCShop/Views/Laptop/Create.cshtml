<form method="post">
    @PartialViews.ValidationPartial
    @PartialViews.CommonFormFieldsPartial
    <div class="form-group">
        <label for="monitorInfo">Monitor Info</label>
        <input type="text" name="monitorInfo" class="form-control" id="">
    </div>
    <div class="form-group">
        <label for="os">OS Info</label>
        <input type="text" name="os" class="form-control" id="">
    </div>
    <select name="selectedCpuId" class="form-control">
        <option value="-1">None</option>
        @foreach (var cpu in Model.AvaliableCPUs)
        {
            <option value="@cpu.Key">@cpu.Value</option>
        }
    </select>
    <select name="selectedGpuId" class="form-control">
        <option value="-1">None</option>
        @foreach (var gpu in Model.AvaliableGPUs)
        {
            <option value="@gpu.Key">@gpu.Value</option>
        }
    </select>
    <select name="selectedHddId" class="form-control">
        <option value="-1">None</option>
        @foreach (var hdd in Model.AvaliableHDDs)
        {
            <option value="@hdd.Key">@hdd.Value</option>
        }
    </select>
    <select name="selectedRamId" class="form-control">
        <option value="-1">None</option>
        @foreach (var ram in Model.AvaliableRAMs)
        {
            <option value="@ram.Key">@ram.Value</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
