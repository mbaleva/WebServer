@model PCShop.Data.Models.HardDrive

<form method="post">
    @PartialViews.ValidationPartial
    @PartialViews.CommonFormFieldsPartial

    <div class="form-group">
        <label for="capacity">Capacity</label>
        <input type="text" name="capacity" class="form-control" id="" placeholder="">
    </div>
    <div class="form-group">
        <label for="rpm">RPM</label>
        <input type="number" name="rpm" class="form-control" id="">
    </div>
    <div class="form-group">
        <label for="interfaces">Interfaces</label>
        <input type="text" name="interfaces" class="form-control" id="">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>